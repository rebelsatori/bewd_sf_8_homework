<h1>Welcome to the Movie App!</h1>
<p>See our collection of movies below:</p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Year Released</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.description %></td>
        <td><%= movie.year_released %></td>
      </tr>
    <% end %>
  </tbody>
</table>

